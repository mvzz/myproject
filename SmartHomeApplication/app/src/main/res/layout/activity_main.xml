<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="340dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:clickable="false"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#3d7ef9"
                app:cardForegroundColor="#fff"
                app:cardCornerRadius="15dp"

                >
                <GridLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:layout_gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/tv_net_air"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="空气质量-良"
                        android:textColor="@color/card_string_color"
                        android:textSize="15dp"
                        android:paddingTop="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_net_location"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="涪城-绵阳市"
                        android:textColor="@color/card_string_color"
                        android:textSize="15dp"
                        android:paddingTop="10dp"
                        android:gravity="end"
                        />

                    <TextView
                        android:id="@+id/tv_net_pm25"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="60"
                        android:textColor="@color/card_string_color"
                        android:textSize="30dp"
                        android:paddingTop="10dp"
                        />
                    <TextView
                        android:id="@+id/tv_net_weather"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="晴"
                        android:textColor="@color/card_string_color"
                        android:textSize="30dp"
                        android:paddingTop="10dp"
                        android:gravity="end"
                        />
                    <TextView
                        android:id="@+id/tv_net_description"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="天气不错"
                        android:textColor="@color/card_string_color"
                        android:textSize="10dp"
                        android:paddingTop="10dp"
                        />
                </GridLayout>

            </androidx.cardview.widget.CardView>
            <GridLayout
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="2"
                android:rowCount="2"
                >

                <!--    湿度-->
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#fff"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="8dp"
                        android:clickable="false"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            >
                            <GridLayout
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:columnCount="2"
                                android:rowCount="1"
                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/temp"
                                    android:scaleType="centerInside"
                                    android:gravity="end"
                                    >
                                </ImageView>

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="40dp"
                                    android:text="温度 ℃"
                                    android:gravity="center"
                                    android:layout_gravity="right"
                                    android:textColor="@color/card_string_color"
                                    ></TextView>
                            </GridLayout>
                            <TextView
                                android:id="@+id/tv_temp_value"
                                android:layout_width="120dp"
                                android:layout_height="40dp"

                                android:textSize="30dp"
                                android:textStyle="bold"
                                android:gravity="end|center_vertical"
                                android:textColor="@color/card_string_color"
                                ></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                <!--    温度-->
                </LinearLayout>
                <!--    湿度-->
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#fff"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="8dp"
                        android:clickable="false"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"

                            >
                            <GridLayout
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:columnCount="2"
                                android:rowCount="1"
                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/hum"
                                    android:scaleType="centerInside"
                                    >
                                </ImageView>

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="40dp"
                                    android:text="湿度 %"
                                    android:gravity="center"
                                    android:textColor="@color/card_string_color"
                                    ></TextView>
                            </GridLayout>
                            <TextView
                                android:id="@+id/tv_hum_value"
                                android:layout_width="120dp"
                                android:layout_height="40dp"

                                android:textSize="30dp"
                                android:textStyle="bold"
                                android:gravity="end|center_vertical"
                                android:textColor="@color/card_string_color"
                                ></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <!--    光照度-->
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#fff"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="8dp"
                        android:clickable="false"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            >
                            <GridLayout
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:columnCount="2"
                                android:rowCount="1"
                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/illu"
                                    android:scaleType="centerInside"
                                    >
                                </ImageView>

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="40dp"
                                    android:text="光照度 Lx"
                                    android:gravity="center"
                                    android:textColor="@color/card_string_color"
                                    ></TextView>
                            </GridLayout>
                            <TextView
                                android:id="@+id/tv_illu_value"
                                android:layout_width="120dp"
                                android:layout_height="40dp"

                                android:textSize="30dp"
                                android:textStyle="bold"
                                android:gravity="end|center_vertical"
                                android:textColor="@color/card_string_color"
                                ></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <!--    CO2-->
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#fff"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="8dp"
                        android:clickable="false"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            >
                            <GridLayout
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:columnCount="2"
                                android:rowCount="1"
                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/co2"
                                    android:scaleType="centerInside"
                                    >
                                </ImageView>

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="40dp"
                                    android:text="CO2 ppm"
                                    android:gravity="center"
                                    android:textColor="@color/card_string_color"
                                    ></TextView>
                            </GridLayout>
                            <TextView
                                android:id="@+id/tv_CO2_value"
                                android:layout_width="120dp"
                                android:layout_height="40dp"

                                android:textSize="30dp"
                                android:textStyle="bold"
                                android:gravity="end|center_vertical"
                                android:textColor="@color/card_string_color"
                                ></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <!--    TVOC-->
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#fff"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="8dp"
                        android:clickable="false"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            >
                            <GridLayout
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:columnCount="2"
                                android:rowCount="1"
                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/co2"
                                    android:scaleType="centerInside"
                                    >
                                </ImageView>

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="40dp"
                                    android:text="PM2.5 "
                                    android:gravity="center"
                                    android:textColor="@color/card_string_color"
                                    ></TextView>
                            </GridLayout>
                            <TextView
                                android:id="@+id/tv_PM2_5_value"
                                android:layout_width="120dp"
                                android:layout_height="40dp"

                                android:textSize="30dp"
                                android:textStyle="bold"
                                android:gravity="end|center_vertical"
                                android:textColor="@color/card_string_color"
                                ></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <!--    TVOC-->
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#fff"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="8dp"
                        android:clickable="false"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            >
                            <GridLayout
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:columnCount="11"
                                android:rowCount="2"
                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/tvoc_1"
                                    android:scaleType="centerInside"
                                    >
                                </ImageView>

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="40dp"
                                    android:text="TVOC ppb"
                                    android:gravity="center"
                                    android:textColor="@color/card_string_color"
                                    ></TextView>
                            </GridLayout>
                            <TextView
                                android:id="@+id/tv_TVOC_value"
                                android:layout_width="120dp"
                                android:layout_height="40dp"

                                android:textSize="30dp"
                                android:textStyle="bold"
                                android:gravity="end|center_vertical"
                                android:textColor="@color/card_string_color"
                                ></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <!--    客厅灯-->
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#fff"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="8dp"
                        android:clickable="false"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            >
                            <GridLayout
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:columnCount="11"
                                android:rowCount="2"
                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/light"
                                    android:scaleType="centerInside"
                                    >
                                </ImageView>

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="40dp"
                                    android:text="客厅灯"
                                    android:gravity="center"
                                    android:textColor="@color/card_string_color"
                                    ></TextView>
                            </GridLayout>
                            <CheckBox
                                android:id="@+id/ck_light"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="end"
                                android:button="@null"
                                android:background="@drawable/switch_selector"
                                android:layout_marginRight="30dp"
                                ></CheckBox>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <!--   风扇 -->
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#fff"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="8dp"
                        android:clickable="false"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            >
                            <GridLayout
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:columnCount="11"
                                android:rowCount="2"
                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/fen"
                                    android:scaleType="centerInside"
                                    >
                                </ImageView>

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="40dp"
                                    android:text="风扇"
                                    android:gravity="center"
                                    android:textColor="@color/card_string_color"
                                    ></TextView>
                            </GridLayout>
                            <CheckBox
                                android:id="@+id/ck_fan"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="end"
                                android:button="@null"
                                android:background="@drawable/switch_selector"
                                android:layout_marginRight="30dp"
                                ></CheckBox>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <!--    加湿器-->
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#fff"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="8dp"
                        android:clickable="false"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            >
                            <GridLayout
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:columnCount="11"
                                android:rowCount="2"
                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/humer"
                                    android:scaleType="centerInside"
                                    >
                                </ImageView>

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="40dp"
                                    android:text="加湿器"
                                    android:gravity="center"
                                    android:textColor="@color/card_string_color"
                                    ></TextView>
                            </GridLayout>
                            <CheckBox
                                android:id="@+id/ck_Humidifier"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="end"
                                android:button="@null"
                                android:background="@drawable/switch_selector"
                                android:layout_marginRight="30dp"
                                ></CheckBox>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <!--    空调-->
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardv_aircondiction"
                        android:layout_width="140dp"
                        android:layout_height="80dp"
                        app:cardBackgroundColor="#fff"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="15dp"
                        app:cardMaxElevation="8dp"
                        android:clickable="true"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            >
                            <GridLayout
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:columnCount="11"
                                android:rowCount="2"
                                >
                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/air_condition"
                                    android:scaleType="centerInside"
                                    >
                                </ImageView>

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="40dp"
                                    android:text="空调"
                                    android:gravity="center"
                                    android:textColor="@color/card_string_color"
                                    ></TextView>
                            </GridLayout>
                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                >
                                <LinearLayout
                                    android:layout_width="65dp"
                                    android:layout_height="40dp"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:id="@+id/tv_main_air_temp"
                                        android:layout_width="65dp"
                                        android:layout_height="20dp"
                                        android:text="制冷模式"
                                        android:textSize="10dp"
                                        android:gravity="center"
                                        android:textColor="@color/card_string_color"
                                        ></TextView>
                                    <TextView
                                        android:id="@+id/tv_main_air_model"
                                        android:layout_width="65dp"
                                        android:layout_height="20dp"
                                        android:text="26"
                                        android:textSize="10dp"
                                        android:gravity="center"
                                        android:textColor="@color/card_string_color"
                                        ></TextView>
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/main_status_AirConditon"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:src="@drawable/switchon"
                                    android:scaleType="centerInside"
                                    android:layout_marginLeft="5dp"
                                    >
                                </ImageView>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </GridLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:padding="30dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="MQTT连接状态："
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/m_mqtt"
                    android:layout_width="wrap_content"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>